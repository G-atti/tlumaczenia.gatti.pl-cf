{
	"CodeBuildWebpageHomePolicyS3": {
		"Type": "AWS::IAM::Policy",
		"Properties": {
			"Roles": [ { "Ref": "CodeBuildWebpageHomeRole" } ],
			"PolicyName": "s3_artifact_access",
			"PolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Action": "s3:*",
						"Resource": { "Fn::Sub": "arn:aws:s3:::${CodePipelineArtifacts}/*"}
					}
				]
			}
		}
	}
}
